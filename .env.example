# Variáveis de Ambiente 
# Frontend
# URL da API do backend. Em desenvolvimento, 
VITE_REACT_APP_BACKEND_URL=http://localhost:3001/api
# Chave pública do Stripe para o frontend. Começa com 'pk_test_' em modo deteste.
VITE_REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY
# Backend
# Porta em que o servidor backend irá escutar.
PORT=3001
# String de conexão com o banco de dados PostgreSQL.
# Formato: postgres://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/ecommerce_db
# Segredo para assinar e verificar JSON Web Tokens (JWT).
# Use uma string longa e aleatória para produção.
JWT_SECRET=SfT5mMoGkGSsqGdHMe4xr+F/gKYXOWX9Y5mgCifD8sg
# Segredo para assinar e verificar Refresh Tokens.
# Use uma string longa e aleatória para produção.
JWT_REFRESH_SECRET=SfT5mMoGkGSsqGdHMe4xr+F/gKYXOWX9Y5mgCifD8sg
# Tempo de expiração do Access Token (JWT) em segundos ou string (ex: '1h','7d').
ACCESS_TOKEN_EXPIRATION=1h
# Tempo de expiração do Refresh Token em segundos ou string (ex: '7d', '30d').
REFRESH_TOKEN_EXPIRATION=7d
# Chave secreta do Stripe para o backend. Começa com 'sk_test_' em modo deteste.
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
# Segredo do Webhook do Stripe. Usado para verificar a autenticidade doseventos do Stripe.
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET
# Credenciais para envio de e-mails transacionais (ex: Mailgun, SendGrid,Nodemailer SMTP).
# Exemplo para SMTP:
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=no-reply@your-ecommerce.com
# Credenciais para Amazon S3 (ou similar) para armazenamento de assets 3D.
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_REGION=your-aws-region # ex: us-east-1
AWS_S3_BUCKET_NAME=your-s3-bucket-name
# URL do frontend (para CORS e redirecionamentos)
FRONTEND_URL=http://localhost:5173